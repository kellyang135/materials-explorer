# Production Environment Configuration
# Copy this file to .env.prod and fill in your values

# Application Settings
PROJECT_NAME="Materials Explorer"
DEBUG=false
API_V1_STR="/api/v1"

# Database Configuration
POSTGRES_USER=materials
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=materials_explorer

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# Materials Project API
MP_API_KEY=your_materials_project_api_key_here

# CORS Settings
CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# Port Configuration
API_PORT=8000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.com/api/v1

# Cache Settings
CACHE_TTL_SECONDS=3600

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your_cert.crt
SSL_KEY_PATH=/etc/ssl/private/your_key.key

# Backup Settings
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30